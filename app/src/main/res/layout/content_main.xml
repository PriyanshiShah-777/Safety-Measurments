<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">


    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="30dp"
        android:hint="Edit Text" />

    <TextView
        android:id="@+id/text_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/name"
        android:layout_marginTop="20dp"
        android:text="I am in trouble." />

    <TextView
        android:id="@+id/text_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text_1"
        android:layout_marginTop="20dp"
        android:text="Someone is following me" />

    <TextView
        android:id="@+id/text_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text_2"
        android:layout_marginTop="20dp"
        android:text="Please help me" />

    <TextView
        android:id="@+id/text_4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text_3"
        android:layout_marginTop="20dp"
        android:text="No vehicles are avialable" />

    <TextView
        android:id="@+id/text_5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text_4"
        android:layout_marginTop="20dp"
        android:text="Feeling Unsafe" />

    <TextView
        android:id="@+id/text_6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text_5"
        android:layout_marginTop="20dp"
        android:text="I am in trouble." />

    <TextView
        android:id="@+id/text_7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text_6"
        android:layout_marginTop="20dp"
        android:text="I am in trouble." />

    <TextView
        android:id="@+id/text_8"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text_7"
        android:layout_marginTop="20dp"
        android:text="I am in trouble." />
